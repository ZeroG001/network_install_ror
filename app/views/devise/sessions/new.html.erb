<div class="signup-form-wrapper">
  <h2 class="sign-in-header"><%= image_tag("copy.png") %> Net Forms</h2>

  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    
    
    <div class="form-inputs login-form-inputs">

      <% flash.each do |type, message | %>
      <div class="alert animated signin-<%= type %>">
        <button class="close" data-dismiss="alert">X</button>
        <%= message %>  
      </div>
    <% end %>

      <div class="input-group input-group-lg">
        <span class="input-group-addon glyphicon glyphicon-user"></span>
        <input autofocus="autofocus" class="string required form-control" id="user_login" name="user[login]" placeholder="Username" type="text" value="">
      </div>

      <div class="input-group input-group-lg">
        <span class="input-group-addon glyphicon glyphicon-lock" aria-hidden="true"></span>
        <input class="password required form-control" id="user_password" name="user[password]" placeholder="Password" type="Password">
        <% # f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      </div>

      
      <hr> 
      <div class="sign-in-submit">
        <%= f.button :submit, "Log In", class: "btn btn-primary btn-lg btn-block" %>
      </div>
    </div>

    
    <!-- <div class="form-actions">
      
    </div> -->
  <% end %>

  <%= render "devise/shared/links" %>

</div>
