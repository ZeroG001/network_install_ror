<h1> Advanced Search </h1>

<%= form_tag("/advsearch", method: "get") do %>
  <%= label_tag(:first_name, "First Name") %>
  <%= text_field_tag(:first_name, params[:first_name], class: "form-control") %>

  <%= label_tag(:last_name, "Last Name") %>
  <%= text_field_tag(:last_name, params[:last_name], class: "form-control") %>

  <%= label_tag(:completed, "Completed") %>
  <%= check_box_tag(:completed) %>

  <%= label_tag(:paynum, "Paynum") %>
  <%= text_field_tag(:paynum, nil, class: 'form-control')  %>

  <%= label_tag(:computer_name, "Computer Name") %>
  <%= text_field_tag(:computer_name, nil, class: 'form-control') %>

  <%= label_tag(:office_number, "Office") %>
  <%= text_field_tag(:office_number,nil, class: 'form-control') %>

  <% #name: nil gets rid of name get variable sent. %>
  <%= submit_tag("Search", name: nil) %>
<% end %>

<% @res_array.each do |item| %>
  <%= item.first_name %>
  <%= item.last_name %>
<% end %>

<% @res_array.each do |net_form| %>
    <!-- Get the deivce image based on what the user put in -->
    <% device_images = {"Desktop" => "screen.png", "Laptop" => "laptop.png", "Tablet" => "tablet.png", "Smartphone" => "mobile.png"} %>
    <% found_image = device_images.select{|k,v| k == net_form.equipment_type} %>
<div class="row">
<div class="device_image col-md-3">
    <%= image_tag(found_image.values.join(" ")) %>
</div>
<div class="col-md-3">
    <%= net_form.first_name + " " + net_form.last_name %>
    </div>

    <div class="col-md-3">
        <%= net_form.computer_name %>
    </div>

    <div class="col-md-3">
        <% if net_form.completed == "1" %>
        <p> This form expires in <%= distance_of_time_in_words(net_form.complete_date, net_form.expire_date)%></p>
        <% elsif net_form.completed == "0" %>
        <p> Incomplete </p>
        <% end %>
    </div>

         
</div>    
        <%= link_to 'Show', net_form %>
        <%= link_to 'Edit', edit_net_form_path(net_form) %>
        <%= link_to 'Destroy', net_form, method: :delete, data: { confirm: 'Are you sure?' } %>
 <% end %>
