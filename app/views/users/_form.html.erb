<%= simple_form_for(@user) do |f| %>

			
			<%= f.error_notification class: "alert animated bounceIn alert-warning error", inner_html: '<button class="close" data-dismiss="alert">x</button>' %>
			
			
	
  

 	<% flash.each do |type, message | %>
	<div class="alert animated bounceIn alert-success <%= type %>">
		<button class="close" data-dismiss="alert">x</button>
		<%= message %>	
	</div>
	<% end %>
  <!-- # if @form.nic_connection == "Wired" -->

  <div class="form-inputs">
  <%= f.input :username %>
  </div>

  <div class="form-inputs">
  <%= f.input :password %>
  </div>

  <div class="form-input">
  <%= @user.manager %> and <%= @user.admin %>
  </div>

  <div class="row row-field">

<h4> Permission Level </h4>

	<div class="col-sm-2 col-md-2 col-lg-2">
		<input class="radio_buttons optional user-radio-button" id="user_user" name="user[user1]" type="checkbox" value="1">
		<label for="user_user">User</label>
	</div>


	<div class="col-sm-2 col-md-2 col-lg-2">
		<input class="radio_buttons optional user-radio-button" id="user_manager" name="user[manager]" type="checkbox" value="0">
		<label for="user_manager">Manager</label>
	</div>

	<div class="col-sm-2 col-md-2 col-lg-2">
		<input class="radio_buttons optional user-radio-button" id="user_admin" name="user[admin]" type="checkbox" value="1" >
		<label for="user_admin">Admin</label>
	</div>

</div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

  

<% end %>
